<hibernate-mapping auto-import="false" default-lazy="false">
	<import class="com.liferay.training.amf.newsletter.model.ArticleAuthor" />
	<import class="com.liferay.training.amf.newsletter.model.Author" />
	<import class="com.liferay.training.amf.newsletter.model.Issue" />
	<class name="com.liferay.training.amf.newsletter.model.impl.ArticleAuthorImpl" table="AMF_ArticleAuthor">
		<id name="articleAuthorId" type="long">
			<generator class="assigned" />
		</id>
		<property name="articlePk" type="com.liferay.portal.dao.orm.hibernate.LongType" />
		<property name="authorPk" type="com.liferay.portal.dao.orm.hibernate.LongType" />
	</class>
	<class name="com.liferay.training.amf.newsletter.model.impl.AuthorImpl" table="AMF_Author">
		<id name="authorId" type="long">
			<generator class="assigned" />
		</id>
		<property name="name" type="com.liferay.portal.dao.orm.hibernate.StringType" />
		<property name="articleAuthorTable" type="com.liferay.portal.dao.orm.hibernate.LongType" />
	</class>
	<class name="com.liferay.training.amf.newsletter.model.impl.IssueImpl" table="AMF_Issue">
		<id name="issueId" type="long">
			<generator class="assigned" />
		</id>
		<property name="issueNumber" type="com.liferay.portal.dao.orm.hibernate.IntegerType" />
		<property name="title" type="com.liferay.portal.dao.orm.hibernate.StringType" />
		<property name="description" type="com.liferay.portal.dao.orm.hibernate.StringType" />
		<property name="issueDate" type="org.hibernate.type.TimestampType" />
	</class>
</hibernate-mapping>