<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.0.0//EN"
        "http://www.liferay.com/dtd/liferay-service-builder_7_0_0.dtd">

<service-builder package-path="com.liferay.training.amf.newsletter">
    <namespace>AMF</namespace>
    <!--<entity data-source="sampleDataSource" local-service="true" name="Foo" remote-service="false" session-factory="sampleSessionFactory" table="foo" tx-manager="sampleTransactionManager uuid="true"">-->

    <entity name="Issue" local-service="true" remote-service="false">

        <column name="issueId" type="long" primary="true"/>

        <column name="issueNumber" type="int" />
        <column name="journalFolderId" type="long" />
        <column name="issueDate" type="Date" />

        <order by="desc">
            <order-column name="issueNumber" />
        </order>

        <finder name="JournalFolderId" return-type="Issue">
            <finder-column name="journalFolderId" />
        </finder>
        <finder name="IssueNumber" return-type="Issue" unique="true">
            <finder-column name="issueNumber" />
        </finder>

        <reference entity="JournalFolder" package-path="com.liferay.journal" />
        <reference entity="JournalArticle" package-path="com.liferay.journal" />
    </entity>

    <entity name="Author" local-service="true" remote-service="false">
        <column name="authorId" type="long" primary="true"/>
        <column name="name" type="String"/>
        <column name="articleAuthorTable" type="long"/>
    </entity>

    <entity name="ArticleAuthor" remote-service="false" local-service="false">
        <column name="articleAuthorId" primary="true" type="long"/>
        <column name="articlePk" type="long"/>
        <column name="authorPk" type="long"/>
    </entity>

</service-builder>